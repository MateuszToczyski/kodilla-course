SELECT
   i.*
  ,il.NAME AS ISSUELIST_NAME
FROM
  ISSUES i
  JOIN ISSUESLISTS il ON il.ID = i.ISSUESLIST_ID;
    
SELECT
   i.*
  ,u.FIRSTNAME AS USER_FIRSTNAME
  ,u.LASTNAME AS USER_LASTNAME
FROM
  ISSUES i
  JOIN USERS u ON u.ID = i.USER_ID_ASSIGNEDTO;

SELECT
   u.*
  ,COUNT(i.ID) AS ISSUES_COUNT
FROM
  USERS u
  JOIN ISSUES i on i.USER_ID_ASSIGNEDTO = u.ID
GROUP BY
  u.ID;
